extends layout

block content

  h1 Author: #{author.name}
  if author.date_of_death_formatted == 'Alive'
    p= 'Alive since : ' + author.date_of_birth_formatted
  else
    p= 'Dead on : ' + author.date_of_death_formatted + ' at ' + author.lifespan + ' y.o.'
    
  div.genres-list

    h4 Books

    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.
  
  hr
  p
    a(href=author.url+'/delete') Delete author
  p
    a(href=author.url+'/update') Update author


